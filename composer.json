{
    "name": "jmarcos16/mine-router",
    "description": "Mini Router project",
    "type": "library",
    "version": "0.3.0-alpha",
    "require": {
        "php": "^8.0",
        "symfony/http-foundation": "^7.1",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^11"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jmarcos16\\MiniRouter\\": "src/",
            "Jmarcos16\\MiniRouter\\Tests\\": "tests/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Ze Marcos",
            "email": "contato.marcosrf@gmail.com"
        }
    ],
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests --colors=always",
        "stan": "vendor/bin/phpstan analyse src tests --level 6",
        "pint": "vendor/bin/pint",
        "analyze": [
            "@stan",
            "@test",
            "@pint"
        ]
    }
}
